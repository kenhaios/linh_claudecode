# API Configuration
VITE_API_URL=http://localhost:3001
VITE_API_VERSION=v1
VITE_SOCKET_URL=http://localhost:3001

# Environment
VITE_NODE_ENV=development

# App Configuration
VITE_APP_NAME=Ha Linh Tử Vi
VITE_APP_DESCRIPTION=Vietnamese Astrology AI Consultation
VITE_APP_VERSION=1.0.0

# Vietnamese Localization
VITE_DEFAULT_LANGUAGE=vi
VITE_SUPPORTED_LANGUAGES=vi,en
VITE_DEFAULT_TIMEZONE=Asia/Ho_Chi_Minh
VITE_DEFAULT_CURRENCY=VND

# Payment Configuration (Client-side)
VITE_MOMO_RETURN_URL=http://localhost:3000/payment/momo/callback
VITE_VNPAY_RETURN_URL=http://localhost:3000/payment/vnpay/callback
VITE_ZALOPAY_RETURN_URL=http://localhost:3000/payment/zalopay/callback

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_BETA_FEATURES=false

# Analytics (Development)
VITE_GOOGLE_ANALYTICS_ID=
VITE_FACEBOOK_PIXEL_ID=

# SEO and Social
VITE_META_TITLE=Ha Linh - Tử Vi Trực Tuyến với AI
VITE_META_DESCRIPTION=Xem tử vi trực tuyến với AI tư vấn chuyên nghiệp. Lập lá số tử vi chính xác theo âm lịch Việt Nam.
VITE_META_KEYWORDS=tử vi, xem tử vi, tử vi online, lá số tử vi, âm lịch, AI tử vi
VITE_META_AUTHOR=Ha Linh Development Team
VITE_META_IMAGE=http://localhost:3000/og-image.jpg

# Third-party Services
VITE_SENTRY_DSN=
VITE_HOTJAR_ID=

# Development Tools
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true
VITE_SHOW_DEBUG_INFO=true

# Performance
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_STRATEGY=cache-first

# Vietnamese Cultural Settings
VITE_LUNAR_CALENDAR_START_YEAR=1900
VITE_LUNAR_CALENDAR_END_YEAR=2100
VITE_DEFAULT_ASTROLOGY_METHOD=phổ_biến
VITE_TRADITIONAL_COLORS=true

# Chat Configuration
VITE_MAX_MESSAGE_LENGTH=500
VITE_TYPING_INDICATOR_DELAY=1000
VITE_AI_RESPONSE_TIMEOUT=30000

# File Upload
VITE_MAX_AVATAR_SIZE=2097152
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# UI Configuration
VITE_THEME_PRIMARY_COLOR=#d4380d
VITE_THEME_SUCCESS_COLOR=#52c41a
VITE_THEME_WARNING_COLOR=#faad14
VITE_THEME_ERROR_COLOR=#ff4d4f

# Chart Visualization
VITE_CHART_ANIMATION_DURATION=800
VITE_ENABLE_CHART_INTERACTIONS=true
VITE_CHART_EXPORT_ENABLED=true

# Token Management (Display)
VITE_SHOW_TOKEN_BALANCE=true
VITE_MIN_TOKEN_PURCHASE=100
VITE_MAX_TOKEN_PURCHASE=10000

# Security (Client-side)
VITE_ENABLE_CSP=true
VITE_SECURE_COOKIES=true
VITE_CSRF_PROTECTION=true