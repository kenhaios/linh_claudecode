# Vietnamese Localization
DEFAULT_TIMEZONE=Asia/Ho_Chi_Minh
DEFAULT_LOCALE=vi_VN
DEFAULT_CURRENCY=VND

# Token Pricing Configuration (VND)
TOKEN_PRICE_BASIC=50000
